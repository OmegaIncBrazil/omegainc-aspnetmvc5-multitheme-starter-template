    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/material")
    @Scripts.Render("~/vue")

    <script src="~/Scripts/jquery.bootgrid.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
